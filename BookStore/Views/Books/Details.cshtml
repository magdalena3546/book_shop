@model BookStore.Models.Book

@{
    ViewData["Title"] = "Szczegóły książki";
}

<h1>Szczegóły książki</h1>

<div>
    <h4>Książka</h4>
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Gatunek</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Kategoria</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
        <dt class="col-sm-2">Opis</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Ilość na stanie</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a>
    <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
</p>
