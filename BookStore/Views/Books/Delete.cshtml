@model BookStore.Models.Book

@{
    ViewData["Title"] = "Usuń książkę";
}

<h1>Usuń książkę</h1>

<h3>Czy na pewno chcesz usunąć tę książkę?</h3>
<div>
    <h4>Książka</h4>
    <dl class="row">
        <dt class="col-sm-2">Tytuł</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Autor</dt>
        <dd class="col-sm-10">@Model.Author</dd>
        <dt class="col-sm-2">Gatunek</dt>
        <dd class="col-sm-10">@Model.Genre</dd>
        <dt class="col-sm-2">Cena</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Ilość na stanie</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
    </dl>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Usuń</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>
