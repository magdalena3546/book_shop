@model IEnumerable<BookStore.Models.Order>

@{
    ViewData["Title"] = "Lista zamówień";
}

<h1>Lista zamówień</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Dodaj nowe zamówienie</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Data</th>
            <th>Klient</th>
            <th>Email</th>
            <th>Status</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@order.CustomerName</td>
                <td>@order.CustomerEmail</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Szczegóły</a>
                    <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edytuj</a>
                    <a asp-action="Delete" asp-route-id="@order.Id" class="btn btn-danger">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
